<% if line_item == @current_item %>
	<tr id = "current_item" class="li<%= line_item.id %>">
	<% else  %>
		<tr class="li<%= line_item.id %>" >
<% end %>
			<td><%= line_item.quantity %> &times; </td>
			<td><%= line_item.product.title %></td>
			<td class = "item_price"><%= number_to_currency(line_item.total_price) %></td>
			<td class = "delete_item"><%= button_to 'X', line_item, method: :delete, confirm: 'Are you sure?', remote: true %></td>
		</tr>